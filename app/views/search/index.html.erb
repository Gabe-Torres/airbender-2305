<section>
  <div id="total">
    <ul>
      <li>
        <p>Total Fire Nation Members: <%= @members.count %></p>
      </li>
    </ul>
  </div>
</section>


<div id="members">
  <ul>
    <% @members.each do |member| %>
      <li>
        <p>Name: <%= member.name %></p>
        <p>Photo: <img src="<%= member.photo %>"> </p>
        <p>Allies: <%= member.allies.present? ? member.allies.join(', ') : "None" %></p>
        <p>Enemies: <%= member.enemies.present? ? member.enemies.join(', ') : "None" %></p>
        <p>Affiliation: <%= member.affiliation %></p>
      </li>
      <% end %>
    </ul>
</div>